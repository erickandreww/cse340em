<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
    res.redirect('/')
} %>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg !== 'Invalid value') { %>
            <li><%= error.msg %></li>
    <%  }}) %>
   </ul>
<% } %>
<form name="add-class" class="inv-management" id="addClass-form" action="/inv/newclass" method="post">
    <fieldset>
        <label for="name">Classification Name<input type="text" name="classification_name" 
            pattern="[^' '\W]+" required value="<%= locals.classification_name %>"></label>
        <input id="submit" type="submit" value="Add Classification">
    </fieldset>
</form>